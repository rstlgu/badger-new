{
  "productName": "Badger",
  "version": "1.0.0",
  "identifier": "com.badger.osint",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "title": "Badger - OSINT Data Extraction",
        "center": true,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "height": 400,
        "width": 500,
        "minHeight": 350,
        "minWidth": 400
      }
    ],
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Sezione Criptovalute - V.B. Luigi Rosato",
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      },
      "deb": {}
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "Tool OSINT per l'estrazione di dati forensi da documenti (criptovalute, identificatori, dati personali, finanziari, sicurezza)",
    "shortDescription": "OSINT Data Extraction",
    "targets": ["deb", "appimage"],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "installerIcon": "./icons/icon.ico"
      }
    }
  }
}
